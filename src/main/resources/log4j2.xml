<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="MyApp" packages="hooks,stepdefinition">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %m%n"/>
        </Console>
        
        <File name="File" fileName="logs/mylog.log">
            <PatternLayout pattern="%-5level %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %m%n"/>
        </File>
    </Appenders>
    
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
